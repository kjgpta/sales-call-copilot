# Embeddings: 'sbert' (sentence-transformers) or 'none'
EMBEDDING_BACKEND=sbert

# LLM provider: 'openai' or 'offline'
LLM_PROVIDER=openai
OPENAI_API_KEY = "openai_api_key_here"

# Retrieval weights
HYBRID_DENSE_WEIGHT=0.6
MAX_CHUNK_TOKENS=256
CHUNK_OVERLAP_RATIO=0.25

# Reranking
RERANKER=cross-encoder   # cross-encoder|none
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Paths
DB_PATH=./index/copilot.db
INDEX_DIR=./index
AUTO_INGEST=1